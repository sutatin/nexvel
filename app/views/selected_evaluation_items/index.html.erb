<p id="notice"><%= notice %></p>

<h1>Listing Selected Evaluation Items</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Evaluation item</th>
      <th>Importance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @selected_evaluation_items.each do |selected_evaluation_item| %>
      <tr>
        <td><%= selected_evaluation_item.user_id %></td>
        <td><%= selected_evaluation_item.evaluation_item_id %></td>
        <td><%= selected_evaluation_item.importance %></td>
        <td><%= link_to 'Show', selected_evaluation_item %></td>
        <td><%= link_to 'Edit', edit_selected_evaluation_item_path(selected_evaluation_item) %></td>
        <td><%= link_to 'Destroy', selected_evaluation_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

